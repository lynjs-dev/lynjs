{
  "name": "lynjs",
  "version": "0.2.0-next.2",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/[GITHUB_USER_NAME]/[REPOSITORY_NAME]"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "echo \"(root) nothing to build yet\"",
    "clean": "git clean -fdX -e node_modules",
    "test": "echo \"(root) no tests yet\" && exit 0",
    "test:core": "npm --prefix packages/core run test",
    "test:core:watch": "npm --prefix packages/core run test:watch",
    "test:core:browser": "npm --prefix packages/core run test:browser",
    "verify:pack": "npm pack --dry-run",
    "prepublishOnly": "npm run verify:pack",
    "prepare": "husky",
    "release": "semantic-release",
    "lint": "eslint --ext .ts,.tsx,.js,.cjs --report-unused-disable-directives --cache",
    "lint:all": "eslint . --ext .ts,.tsx,.js,.cjs --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix --max-warnings=0",
    "format": "prettier . --check --cache",
    "format:fix": "prettier . --write --cache",
    "lint:ws": "npm run lint -ws --if-present",
    "format:ws": "npm run format -ws --if-present",
    "docs:dev": "npm --prefix docs run dev",
    "docs:build": "npm --prefix docs run build",
    "docs:preview": "npm --prefix docs run preview"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@lynjs/core": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testing-library/dom": "^10.4.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.8",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs}": [
      "npm run lint:fix"
    ],
    "*.{json,yml,yaml,css,scss,html,md}": [
      "npm run format:fix"
    ]
  }
}
